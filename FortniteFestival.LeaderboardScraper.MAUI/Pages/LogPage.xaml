<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FortniteFestival.LeaderboardScraper.MAUI.Pages.LogPage"
             Title="Log">
    <VerticalStackLayout Padding="12" Spacing="8">
        <HorizontalStackLayout>
            <Button Text="Copy All" Clicked="OnCopyAll" />
            <Label Text="Tap inside, select &amp; copy (Ctrl+C)" FontSize="12" TextColor="Gray" />
        </HorizontalStackLayout>
        <Editor x:Name="LogEditor" Text="{Binding LogJoined}" AutoSize="TextChanges" IsReadOnly="True" FontFamily="Consolas" HeightRequest="600" />
    </VerticalStackLayout>
</ContentPage>