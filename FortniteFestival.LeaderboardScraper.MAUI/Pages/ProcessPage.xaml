<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FortniteFestival.LeaderboardScraper.MAUI.Pages.ProcessPage"
             Title="Process">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry Placeholder="Exchange Code" Text="{Binding ExchangeCode}" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Generate Exchange Code" Command="{Binding GenerateCodeCommand}" />
            <Button Text="Retrieve Scores" Command="{Binding FetchCommand}" IsEnabled="{Binding FetchEnabled}" />
            <Button Text="Copy Log" Clicked="OnCopyLog" />
        </HorizontalStackLayout>
        <Grid ColumnDefinitions="*,auto" RowDefinitions="auto">
            <ProgressBar Progress="{Binding ProgressPct, Converter={StaticResource PctToProgressConverter}}" />
            <Label Grid.Column="1" Text="{Binding ProgressLabel}" VerticalOptions="Center" />
        </Grid>
        <Label Text="{Binding Metrics}" FontSize="12" TextColor="Gray" />
        <Editor x:Name="InlineLogEditor" Text="{Binding LogJoined}" AutoSize="TextChanges" IsReadOnly="True" FontFamily="Consolas" HeightRequest="300" />
    </VerticalStackLayout>
</ContentPage>