<?xml version="1.0" encoding="UTF-8"?>
<Application
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:FortniteFestival.LeaderboardScraper.MAUI"
  xmlns:conv="clr-namespace:FortniteFestival.LeaderboardScraper.MAUI.Converters"
  x:Class="FortniteFestival.LeaderboardScraper.MAUI.App"
>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <conv:PctToProgressConverter x:Key="PctToProgressConverter" />
      <conv:PercentHitConverter x:Key="PercentHitConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
